@model Category
@{
    ViewData["Title"] = "Detail";
}

<div class="row" style="justify-content:center;">
    <div class="col-lg-">
        <div class="card-body">
            <blockquote class="blockquote blockquote-primary">
                <div class="blockquote-danger mb-3">@Model.Name</div>
                <p>@Html.Raw(Model.Description)</p>
            </blockquote>
            <div class="row mt-3 ml-3">
                <a asp-action="Index" class="btn btn-outline-warning">Exit</a>
            </div>
        </div>
    </div>
</div>


